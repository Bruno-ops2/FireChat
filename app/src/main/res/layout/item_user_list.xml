<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/ll_item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@mipmap/ic_profilee"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/tvLogo"
        android:scaleType="centerCrop"
        app:civ_border_width="1dp"
        app:civ_border_color="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rishabh Jindal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />


            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="\@rishabhjindal"

                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
        </LinearLayout>

        <TextView
            android:text="Hey everyone I am using drizzle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="#000000"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/tv_status" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/ic_like"
                android:text="Likes : 21"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/img_likes"
                android:layout_weight="1" />
            <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_likes"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/ic_play_music"
                android:text="Songs : 21"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/tv_email"
                android:layout_weight="1"
                />

            <TextView
                android:text="21"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_songs"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_message"
            android:text="Songs : 21"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/img_message"
            android:layout_weight="1"
            />

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>